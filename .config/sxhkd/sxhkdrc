#
# wm independent hotkeys
#

# terminal emulator
super + Return
        notify-send "Test" "Key combination works"

# program launcher
super + a
    rofi -show run

# file manager
super + e
    nemo

# browser
super + shift + u
    firefox

# screenshot (changed from super + w to Print key)
# # screenshot
super + v
        notify-send "Test" "Key combination works"

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + r
    bspc wm -r

# close window
super + q
    bspc node -c

# toggle fullscreen
super + f
   bspc node -t fullscreen

# focus/swap
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# resize windows
super + alt + {h,j,k,l}
    bspc node -z {left -20 0 || bspc node -z right -20 0,\
                  bottom 0 20 || bspc node -z top 0 20,\
                  top 0 -20 || bspc node -z bottom 0 -20,\
                  right 20 0 || bspc node -z left 20 0}

#
# desktop switching
#

# focus desktop
super + {1-9,0}
    bspc desktop -f '^{1-9,10}'

# send to desktop
super + shift + {1-9,0}
    bspc node -d '^{1-9,10}'

#
# system controls
#

# toggle bar
super + p
    bash ~/.config/lemonbar/toggle.sh

# shutdown
super + alt + p
    shutdown nowsuper


