super + Return
    kitty

super + w
    maim -s | xclip -selection clipboard -t image/png && notify-send "Screenshot" "Copied to clipboard" -t 2000

super + e
    nemo

super + a
    rofi -show run


super + shift + u
    firefox

super + alt + r
    bspc wm -r

super + {1-9,0}
    bspc desktop -f '^{1-9,10}'

super + f
   bspc node -t fullscreen

super + h
    bspc node -f west

super + j
    bspc node -f south

super + k
    bspc node -f north

super + l
    bspc node -f east

super + q
    bspc node -c

super + shift + h
    bspc node -s west

super + shift + j
    bspc node -s south

super + shift + k
    bspc node -s north

super + shift + l
    bspc node -s east

super + alt + {h,j,k,l}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
                top 0 -20 || bspc node -z bottom 0 -20,\
                right 20 0 || bspc node -z left 20 0}


